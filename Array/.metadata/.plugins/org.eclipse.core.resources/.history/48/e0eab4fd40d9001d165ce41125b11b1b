
public class Practice
{
	
	public static int max(int arr[]) // passing array to the method to find max or min number from the array
	{
		
		int max=arr[0];
		for (int i=0;i<arr.length;i++)
		{
			if(arr[i] > max)
				max=arr[i];
			
		}
		return max;
	}
	
	
